<Window x:Class="MyCap.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Save Settings -->
        <GroupBox Header="Save Settings" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Save Directory:" 
                       Grid.Row="0" 
                       Grid.Column="0" 
                       VerticalAlignment="Center"/>

                <TextBox x:Name="SaveDirectoryTextBox" 
                         Grid.Row="0" 
                         Grid.Column="1" 
                         Margin="5,0"/>

                <Button Content="Browse..." 
                        Grid.Row="0" 
                        Grid.Column="2" 
                        Click="BrowseButton_Click"/>

                <CheckBox x:Name="AutoSaveCheckBox" 
                          Content="Auto Save Captures" 
                          Grid.Row="1" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="2" 
                          Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Hotkey Settings -->
        <GroupBox Header="Hotkeys" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Full Screen:" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="FullScreenHotkeyTextBox" 
                         Grid.Row="0" 
                         Grid.Column="1" 
                         Margin="5,0"/>

                <Label Content="Region Select:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="RegionSelectHotkeyTextBox" 
                         Grid.Row="1" 
                         Grid.Column="1" 
                         Margin="5,0"/>

                <Label Content="Window Capture:" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="WindowCaptureHotkeyTextBox" 
                         Grid.Row="2" 
                         Grid.Column="1" 
                         Margin="5,0"/>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom">
            <Button Content="Save" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="SaveButton_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 