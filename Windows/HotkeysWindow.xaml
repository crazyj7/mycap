<Window x:Class="MyCap.Windows.HotkeysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotkeys" 
        Height="400" 
        Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="HotkeysListView" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Action" Width="120" DisplayMemberBinding="{Binding Action}"/>
                    <GridViewColumn Header="Hotkey" Width="100" DisplayMemberBinding="{Binding Hotkey}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="1" 
                Content="Close" 
                Width="80" 
                Height="25" 
                Margin="0,10,0,0" 
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window> 