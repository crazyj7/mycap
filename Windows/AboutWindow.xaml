<Window x:Class="MyCap.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About MyCap" 
        Height="220" 
        Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="MyCap - Screen Capture Tool" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center">
            <TextBlock Text="Version 1.0" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,10"/>
            <TextBlock Text="Made by" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,5"/>
            <TextBlock Text="crazyj7@gmail.com" 
                      HorizontalAlignment="Center"/>
        </StackPanel>

        <Button Grid.Row="2" 
                Content="Close" 
                Width="80" 
                Height="25" 
                Margin="0,10,0,0" 
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window> 